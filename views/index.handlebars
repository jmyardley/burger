<div class="container">
<h1>The Burger App</h1>
    <div class="row">

        <div class="col-md-6">


            <h2> Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block }}
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col=md=6">

            <h2>Devoured Burgers</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-block }}
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button class="btn-success" type="submit">Add Burger</button>
</form>
</div>